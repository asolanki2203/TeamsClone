<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylest.css">
    <link rel="stylesheet" href="/chat.css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
	<script src="/socket.io/socket.io.js" defer></script>
	<script src="/chat.js" defer></script>	
    <title>Teams Clone</title>
	<script>
		let unread=false;
	</script>
</head>
<body>
    <%- include('partials/authHeader'); -%>
<div class="container bootstrap snippets bootdey pl-16">
    <div class="row">
		<div class="col-md-3 bg-white ">
            <div class=" row border-bottom padding-smx" style="height: 40px;">
            	Chats
            </div>
            
            <!-- =============================================================== -->
            <!-- member list -->
            <ul id="contacts" class="friend-list overflow-scroll h-5/6">
                <li class="active bounceInDown">
                	<a href="#" class="clearfix">
                		<img src="/images/chaticon.png" alt="" class="img-circle">
                		<div class="friend-name">	
                			<strong>New Chat</strong>
                		</div>
                		<input id="inp" class="p-2" placeholder="Enter email of a user">
                        <button id="addChat" class="bg-white p-2 border-gray-500">Add</button>
						<p class="text-gray-600" id="errr">Try aakashsolanki22032002@gmail.com :)</p>
                	</a>
                </li>
				<% arr.forEach((e)=>{ %> 
					<li class="active bounceInDown">
						<% let u=e.suid %>
						<a  class="clearfix" onclick=`getPersonalChat(${u})`>
							<img id="chattie-image" src= <%= e.sdp %> alt="" class="img-circle">
							<div class="friend-name flex">	
								<strong id="u2ser"><%= e.sname %></strong>
								<% if(e.read===false){ %>
									<% unread=true; %>
								<img style="height: 15px; width: 15px; margin-left: 100px; margin-top: 15px;" src="/images/redDot.png">
								<% } %>
							</div>
							<!-- <div class="last-message text-muted">Hello, Are you there?</div> -->
						</a>
					</li> 
				<% }) %>	           
            </ul>
		</div>
        
        <!--=========================================================-->
        <!-- selected chat -->
    	<div class="col-md-8 bg-white ">
            <div class="bg-white p-2 rounded-t-md">
                <ul id="mesgs" class="chat overflow-scroll p-12" style="height: 33rem;">
					            
                </ul>
            </div>
            <div class="chat-box bg-white">
            	<div class="input-group">
            		<input id="messageContent" class="form-control border no-shadow no-rounded" placeholder="Type your message here">
            		<span class="input-group-btn">
            			<button id="sendBtn" class="btn btn-success no-rounded" type="button">Send</button>
            		</span>
            	</div><!-- /input-group -->	
            </div>            
		</div>        
	</div>
</div>
<%- include('partials/footer'); -%>
